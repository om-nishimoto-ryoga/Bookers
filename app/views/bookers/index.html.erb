<p id="notice">
 <%=  notice %>
</p>

 <h1>Books</h1>
  <table>
  	<thead>
  		<tr>
  		 <th>Title</th>
  		 <th>Body</th>
  		 <th colspan="3"></th>
  		</tr>
  	</thead>
  	<tbody>
  	<% @bookers.each do |post| %>
     <tr>
    	<td><span><%= post.title %></span></td>
    	<td><span><%= post.body %></span></td>
    	<td><%= link_to "Show", booker_path(post.id), class:"show_" %></td>
    	<td><%= link_to "Edit", edit_booker_path(post.id), class:"edit_" %></td>
    	<td><%= link_to "Destroy", booker_path(post.id), method: :delete, "data-confirm" => "Are you sure?", class:"destroy_" %></td>
     </tr>
    <% end %>
    </tbody>
  </table>

<h1>New book</h1>
<%= form_for(@booker) do |f| %>
 
    <h4>Title</h4>
    <div><%= f.text_field :title,class:"book_title" %></div>
 
    <h4>Body</h4>
    <div><%= f.text_area :body, class:"book_body" %></div>
 
    <div><%= f.submit 'Create Book' %></div>
 
<% end %>